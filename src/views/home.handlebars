{{!-- tengo que hacer un ciclo para recorrer los productos y mostrarlos en la vista
y un boton para actualizar la vista --}}

<h1>Productos</h1>
<div class="box">
{{#each products}}
    <div class="product">
        <h2>{{name}}</h2>
        <p>{{description}}</p>
        <p>{{price}}</p>
    </div>
{{/each}}
</div>
<button id="update-products">Actualizar</button>
<script src="socket.io/socket.io.js"></script>
<script src="../../public/js/index.js"></script>
